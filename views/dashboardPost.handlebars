<div class="pt-5 row flex-wrap">
  <div class="col-xl-9">
    <div class="">
      <div class="display-flex">
        <div class="w-100">
          <div class="card p-4 card-rounded">
            <div class="card card-header">
              <h2>Author: {{userPost.User.username}}</h2>
              <h2>{{userPost.title}} </h2>
            </div>
            <div class="card card-body card-rounded">
              <button class="update-post">Update</button>
              <button class="delete-post" data-id={{userPost.id}}>Delete</button>
            </div>
            <div class="hidden updatepost">
                <center><section class="col-xl-12 w-100 py-5 display-flex flex-column align-around">
                    <div class="responsivewidth">
                    <center><h2>Update Post</h2></center>
                    <div class="form">
                        <textarea class="form-input responsivewidth" rows="2" cols="50" type="text" id="post-title" placeholder='{{userPost.title}}'></textarea>
                    </div>
                    <div class="form">
                        <textarea  class="form-input responsivewidth" rows="8" cols="50" id="post-message" placeholder='{{userPost.body}}'></textarea>
                    </div>
                    <center><div class="form responsivewidth">
                        <button class="btn btn-primary responsivewidth updatePostButton" type="submit" data-id={{userPost.id}}>Update</button>
                    </div></center>
                    </div>
                </section></center>
            </div>
            <div class="card card-body card-rounded">
              <p>{{userPost.body}}</p>
            </div>
            <div class="card card-body card-rounded">
              <p>Posted On: {{format_date userPost.createdAt}}</p>
            </div>
            <div class="card card-footer card-rounded">
              <h3 id="selectedPost" class="w-100 commentsTag">Comments</h3>

              {{#each comments as |comment| }}
              {{> comments}}
              {{/each}}
            </div>
            <div class="card card-footer card-rounded">
              <form class="form login-form">
                <div class="form-group">
                  <label for="comment-form">Comment:</label>
                  <input name="comment-body" class="form-input" type="text" placeholder="comment text goes here" />
                <div class="form-group">
                  <button id="commentButton" class="btn btn-primary" type="submit" data-id={{userPost.id}}>Comment</button>
                </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/comment.js"></script>
<script src="/js/updateDelete.js"></script>